<%- include("../components/Header")  %>
 
<!-- navbar -->
<nav>
    <div class="navbar bg-base-100 bg-accent">
        <a class="btn btn-ghost normal-case text-xl">Nama Perusahaan</a>
      </div>
</nav>

<body class="w-1/3 p-10 bg-accent rounded-lg shadow-md">
    <div class="p-10 bg-white rounded-lg shadow-lg text-center">
      <h1 class="text-2xl font-bold mb-4">Add New Creditor</h1>
      <form class="space-y-4">
        <div class="flex flex-col mb-4">
          <label for="firstName" class="mb-1 text-left">First Name</label>
          <input type="text" id="firstName" name="firstName" class="form-input" placeholder="Enter your first name">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="lastName" class="mb-1 text-left">Last Name</label>
          <input type="text" id="lastName" name="lastName" class="form-input" placeholder="Enter your last name">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="email" class="mb-1 text-left">Email</label>
          <input type="email" id="email" name="email" class="form-input" placeholder="Enter your email">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="domicile" class="mb-1 text-left">Domicile</label>
          <input type="text" id="domicile" name="domicile" class="form-input" placeholder="Enter your domicile">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="phone" class="mb-1 text-left">Phone</label>
          <input type="tel" id="phone" name="phone" class="form-input" placeholder="Enter your phone number">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="attorneyName" class="mb-1 text-left">Attorney Name</label>
          <input type="text" id="attorneyName" name="attorneyName" class="form-input" placeholder="Enter attorney's name">
        </div>
  
        <div class="flex flex-col mb-4">
          <label for="claimAmount" class="mb-1 text-left">Claim Amount</label>
          <input type="number" id="claimAmount" name="claimAmount" class="form-input" placeholder="Enter claim amount">
        </div>
  
        <button type="submit" class="btn btn-accent w-full">Submit</button>
      </form>
    </div>
  </body>
</html>
            
       