<%- include("components/Header")  %>
    <!-- Navbar -->
    <nav class="bg-gray-800 text-white p-4 flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a href="/settings" class="text-white">Settings</a>
        <div class="text-2xl font-bold">Nama Perusahaan</div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="w-full mx-auto p-4">
      <!-- Three larger boxes side by side -->
      <div class="flex justify-between mb-6">
        <div class="w-1/3 p-10 bg-gray-100 rounded-lg shadow-md">
          <!-- Data 1 -->
          <h3>Jumlah Creditor: <%= creditorsArr.length %> </h3>
        </div>
        <div class="w-1/3 p-10 bg-gray-100 rounded-lg shadow-md mx-4">
          <!-- Data 2 -->
          <h3>Total Tagihan: <%= totalClaimCreditors %></h3>
        </div>
        <div class="w-1/3 p-10 bg-gray-100 rounded-lg shadow-md">
          <!-- Data 3 -->
          <h3>Detail...</h3>
        </div>
      </div>

      <table class="w-full">
        <thead class="bg-slate-400">
            <tr>
                <th class="px-4 py-2">No</th>
                <th class="px-4 py-2">Name</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">Domicile</th>
                <th class="px-4 py-2">Phone</th>
                <th class="px-4 py-2">Attorney Name</th>
                <th class="px-4 py-2">Claim Type</th>
            </tr>
        </thead>
        <tbody>
            <% creditorsArr.forEach((creditor) => { %>
            <tr>
                <td class="border px-4 py-2"><%= creditor.id %></td>
                <td class="border px-4 py-2"><%= creditor.fullName %></td>
                <td class="border px-4 py-2"><%= creditor.email %></td>
                <td class="border px-4 py-2"><%= creditor.domicile %></td>
                <td class="border px-4 py-2"><%= creditor.phone %></td>
                <td class="border px-4 py-2"><%= creditor.Attorney.firstName+ ' ' +creditor.Attorney.lastName %></td>
                <td class="border px-4 py-2"><%= creditor.claimType %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</html>
