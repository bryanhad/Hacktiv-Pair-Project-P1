<%- include('components/Header') %>

<div class="w-full grid grid-cols-4 gap-4 flex-[1]">
    <div class="col-span-3 w-full flex flex-col">
        <div class="w-full max-h-[350px] overflow-hidden grid place-content-center">
            <img src="<%= blog.imageUrl %>" alt="blog cover image" class="object-cover w-full h-full">
        </div>
        <div class="p-4">
            <div class="flex flex-col gap-2 mb-4">
                <h1 class="font-semibold text-3xl"><%= blog.title %></h1>
                <p><%= blog.body %></p>
            </div>

            <%- include('./components/WriterInfo', {
                profilePicture: blog.writersProfilePicture,
                name: blog.writersFullName,
                createdDate: blog.createdDate,
                createdTime: blog.createdTime
            }) %>
        </div>
    </div>
    <div class="col-span-1 bg-gray-100 rounded-md">
    </div>

</div>

<%- include('components/Footer') %>